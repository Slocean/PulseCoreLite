{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PulseCore",
  "version": "1.6.2",
  "identifier": "com.pulsecore.app",
  "build": {
    "beforeDevCommand": "npm run sync:tauri-version && npm run dev",
    "beforeBuildCommand": "npm run sync:tauri-version && npm run build",
    "devUrl": "http://localhost:9000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PulseCoreLite Overlay",
        "url": "index.html",
        "width": 340,
        "height": 260,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      },
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "silent": true
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Slocean/PulseCoreLite/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBQjFCRDVCMzFGODg5NzIKUldSeWlmZ3hXNzJ4U3BpS3NVUVdhVVl3dTlWTlRmQVhFRVNEV1pTVFZiQU55KzZPZlE4dnVzQnEK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}