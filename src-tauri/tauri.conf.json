{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PulseCore",
  "version": "1.3.3",
  "identifier": "com.pulsecore.app",
  "build": {
    "beforeDevCommand": "npm run sync:tauri-version && npm run dev",
    "beforeBuildCommand": "npm run sync:tauri-version && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PulseCoreLite Overlay",
        "url": "index.html",
        "width": 340,
        "height": 260,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      },
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "silent": true
      }
    }
  }
}