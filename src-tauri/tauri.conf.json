{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PulseCore",
  "version": "0.1.0",
  "identifier": "com.pulsecore.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PulseCore",
        "width": 1440,
        "height": 920,
        "minWidth": 1000,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "PulseCore Overlay",
        "url": "index.html#/overlay",
        "width": 340,
        "height": 260,
        "resizable": false,
        "maximizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
